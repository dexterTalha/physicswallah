<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardElevation="18sp"
    app:cardCornerRadius="15sp"
    android:layout_margin="15sp"
    android:background="@drawable/recycler_shape"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="15sp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/opensans_medium"
                android:textColor="@color/primary_text_color"
                android:textSize="18sp" />
            <TextView
                android:layout_marginTop="10sp"
                android:id="@+id/subject_qualification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/opensans_medium"
                android:textColor="@color/secondary_text_color"
                android:textSize="12sp" />

            <Button
                android:text="View More"
                android:textSize="10sp"
                android:id="@+id/btn_view_more"
                android:background="@drawable/view_more_background"
                android:layout_marginTop="9sp"
                android:layout_width="wrap_content"
                android:layout_height="30sp"/>
        </LinearLayout>
        <ImageView
            android:background="@drawable/image_background"
            android:id="@+id/teacher_image"
            android:src="@drawable/physics_wallah_logo"
            android:layout_width="100sp"
            android:layout_height="100sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>